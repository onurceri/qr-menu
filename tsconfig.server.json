{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules"]
}